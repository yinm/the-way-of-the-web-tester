<% provide(:title, "Log in") %>

<div class="container">

  <%= form_for(:session, url: login_path, :html => {:class => 'form-signin'}) do |f| %>
      <h2 class="form-signin-heading">Please sign in</h2>

      <input id="session_email" name="session[email]" type="text" class="form-control" placeholder="Email">
      <input id="session_password" name="session[password]" type="password" class="form-control" placeholder="Password">

      <div class="text-centered, center">
        <button class="btn btn-large btn-primary" type="submit">Sign in</button>
      </div>

  <% end %>

  <div class="center">
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>


</div> <!-- /container -->





